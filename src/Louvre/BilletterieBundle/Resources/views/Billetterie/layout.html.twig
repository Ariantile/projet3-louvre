{# src/BilletterieBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Billeterie du musée du Louvre{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/louvrebilletterie/css/style.css') }}"/>
        {% endblock %}
    </head>

    <body>
       
    <header>
        <div class="container bloc-head">      
            <div class="row">
                <div class="col-sm-5 col-xs-12 logoTitre">
                    <p>Louvre Billetterie</p>
                </div>
                <div class="col-sm-7 col-xs-12 traduction">
                    <img src="{{ asset('bundles/louvrebilletterie/images/fr.png') }}" alt="Traduction française" class="drapfr"/>
                    <img src="{{ asset('bundles/louvrebilletterie/images/gb.png') }}" alt="Traduction anglaise" />
                    <button id="btPanier" type="button">
                        <span id="icoPanier" class="glyphicon glyphicon-shopping-cart"></span>
                    </button>
                </div>
            </div>
        </div>
   </header>
   
    <section>
        {% block header %}
        {% endblock %}
        {% block content %}
        {% endblock %}
    </section>

    <footer>
        <div class="container contFooter">
            <div class="row topFooter">
                <div class="col-sm-6 col-xs-12">
                    <p>
                        Billet perdu ? Indiquez l'adresse courriel utilisée lors de votre achat,
                        un nouveau courriel vous sera envoyé contenant vos billets.
                    </p>
                </div>
                <div class="col-sm-6 col-xs-12 paiement">
                    <h2>Moyen de paiement</h2>
                    <div class="carte">
                        <img src="{{ asset('bundles/louvrebilletterie/images/cbvisa.png') }}" alt="Visa" />
                        <img src="{{ asset('bundles/louvrebilletterie/images/cbmaster.png') }}" alt="Master card" />
                        <img src="{{ asset('bundles/louvrebilletterie/images/cbamerican.png') }}" alt="American express" />
                        <img src="{{ asset('bundles/louvrebilletterie/images/cbpaypal.jpg') }}" alt="Paypal" class="icoPaypal"/>
                    </div>
                </div>
            </div>
            <div class="row CgvMentions">
                <div class="col-xs-6">
                    <a href="#">Mentions légales</a>
                </div>
                <div class="col-xs-6">
                    <a href="#" class="cgv">Conditions générales de vente</a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <p class="copy">Musée du Louvre© {{ 'now'|date('Y') }}.</p>
                </div>
            </div>
        </div>
    </footer>

    {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        <script src="{{ asset('bundles/louvrebilletterie/javascript/script.js') }}"/></script>
    {% endblock %}

  </body>
</html>
