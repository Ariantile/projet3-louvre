{% extends "LouvreCoreBundle::layout.html.twig" %}

{% block title %}
  Page d'accueil - {{ parent() }}
{% endblock %}

{% block content %}
       
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 well">
            <h2>Informations de facturation</h2>
            {{ form_start(formfacturation) }}
                {{ form_row(formfacturation.nomFacture, {'label': 'Nom'}) }}
                {{ form_row(formfacturation.prenomFacture, {'label': 'Prenom'}) }}
                {{ form_row(formfacturation.pays, {'label': 'Pays'}) }}
                {{ form_row(formfacturation.naissanceFacture, {'label': 'Date de naissance'}) }}
            {{ form_end(formfacturation) }}
        </div>
        
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 well">
            <h2>Informations nominatives des billets</h2> 
            {{ form_start(formbillet) }}
                {{ form_row(formbillet.nomBillet, {'label': 'Nom'}) }}
                {{ form_row(formbillet.prenomBillet, {'label': 'Prenom'}) }}
                {{ form_row(formbillet.paysBillet, {'label': 'Pays'}) }}
                {{ form_row(formbillet.naissanceBillet, {'label': 'Date de naissance'}) }}
            {{ form_end(formbillet) }}
        </div>
        
{% endblock %}