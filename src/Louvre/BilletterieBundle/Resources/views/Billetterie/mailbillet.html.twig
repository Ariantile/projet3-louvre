<div style="background-color: #FBFBFB">
   
    <table cellpadding="5px" cellspacing="0" style="background-color: #FBFBFB; max-width: 600px; margin: 0 auto; padding: 0" width="100%">
        <tr style="background-color: #FBFBFB">
            <td style="text-align: center;"><img src="{{ logo }}" alt="logo"></td>
        </tr>
        <tr>
            <td style="font-weight: bold; 
                       font-size: 20px; 
                       text-align: center;
                       border: 1px solid grey;
                       border-top-left-radius: 5px;
                       border-top-right-radius: 5px;
                       background-color: #312C2C;
                       color: white;
                      ">
                {{ 'louvre.mail.titre'|trans }}
            </td>
        </tr>
        <tr style="background-color: white; text-align: justify;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey; 
                       border-bottom: 1px solid grey; 
                       border-bottom-right-radius: 5px;
                       border-bottom-left-radius: 5px;">
                {{ 'louvre.mail.message'|trans }}
            </td>
        </tr>
        <tr>
            <td style="height: 20px;">
                
            </td>
        </tr>
        <tr>
            <td style="font-weight: bold; 
                       font-size: 20px; 
                       text-align: center;
                       border: 1px solid grey;
                       border-top-left-radius: 5px;
                       border-top-right-radius: 5px;
                       background-color: #312C2C;
                       color: white;
                      ">
                {{ 'louvre.accueil.facturation.titre'|trans }}
            </td>
        </tr>
        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;">
                {{ 'louvre.accueil.label.nom'|trans }} : {{ infos[0].commande.facturation.nomFacture }}
            </td>
        </tr> 
        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;">
                {{ 'louvre.accueil.label.prenom'|trans }} : {{ infos[0].commande.facturation.prenomFacture }}
            </td>
        </tr>

        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;">
                {{ 'louvre.accueil.label.date_nais'|trans }} : {{ infos[0].commande.facturation.naissanceFacture|date("m/d/Y") }}
            </td>
        </tr>
        
        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;
                       border-bottom: 1px solid grey; 
                       border-bottom-right-radius: 5px;
                       border-bottom-left-radius: 5px;">
                {{ 'louvre.accueil.facturation.mail'|trans }} : : {{ infos[0].commande.facturation.courriel }}
            </td>
        </tr>
        <tr>
            <td style="height: 20px;">
                
            </td>
        </tr>
        <tr>
            <td style="font-weight: bold; 
                       font-size: 20px; 
                       text-align: center;
                       border: 1px solid grey;
                       border-top-left-radius: 5px;
                       border-top-right-radius: 5px;
                       background-color: #312C2C;
                       color: white;
                      ">
                {{ 'louvre.accueil.validation.titre_r'|trans }}
            </td>
        </tr>
        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;"> 
                {{ 'louvre.accueil.choix.date'|trans }} : {{ infos[0].commande.dateReservation|date("m/d/Y") }}
            </td>
        </tr>
        
        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;"> 
                {{ 'louvre.paiement.label.type'|trans }} : 
                {% if infos[0].commande.demiJournee == true %}
                    <span>{{ 'louvre.accueil.choix.demi'|trans }}</span>
                {% else %}
                    <span>{{ 'louvre.accueil.choix.jour'|trans }}</span>
                {% endif %}
            </td>
        </tr>
        
        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;
                       border-bottom: 1px solid grey;
                       border-bottom-right-radius: 5px;
                       border-bottom-left-radius: 5px;">
                {{ 'louvre.paiement.label.nb'|trans }} : {{ infos[0].commande.qte }}
            </td>
        </tr>
        <tr>
            <td style="height: 20px;">
                
            </td>
        </tr>   
        <tr>
            <td style="font-weight: bold; 
                       font-size: 20px; 
                       text-align: center;
                       border: 1px solid grey;
                       border-top-left-radius: 5px;
                       border-top-right-radius: 5px;
                       background-color: #312C2C;
                       color: white;
                      ">
                {{ 'louvre.mail.billets'|trans }}
            </td>
        </tr>
        <tr style="background-color: white; text-align: center;">
            <td style="border-left: 1px solid grey;
                       border-right: 1px solid grey;
                       border-bottom: 1px solid grey;">
                <img src="{{ qrcode_data_uri(infos[0].commande.numCommande, { extension: 'png', size: 100 }) }}" />
                {{ 'louvre.mail.reserv_code'|trans }} : {{ infos[0].commande.numCommande }}
            </td>
        </tr>    
        {% for billet in infos %}
            <tr style="background-color: white; text-align: center;">
                <td style="border-left: 1px solid grey;
                           border-right: 1px solid grey;">
                    {{ billet.nomBillet }} {{ billet.prenomBillet }}
                </td>
            </tr>
            <tr style="background-color: white; text-align: center;">
                <td style="border-left: 1px solid grey;
                           border-right: 1px solid grey;">
                    {{ 'louvre.paiement.label.tarif'|trans }} : {{ billet.tarifBillet }}
                </td>
            </tr>
            <tr style="background-color: white; text-align: center;">
                <td style="border-left: 1px solid grey;
                           border-right: 1px solid grey;
                           border-bottom: 1px solid grey;">
                    {{ 'louvre.paiement.label.prix'|trans }} : {{ billet.prixBillet }}
                </td>
            </tr>
        {% endfor %}
        <tr style="text-align: right; ">
            <td>
                {{ 'louvre.layout.copyright'|trans }} Â© 
                {{ 'now'|date('Y') }}.
            </td>
        </tr>
    </table>
</div>